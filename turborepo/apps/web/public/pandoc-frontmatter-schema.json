{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Pandoc Markdown Front-Matter",
  "type": "object",
  "additionalProperties": false,
  "required": ["papersize", "geometry", "fontsize"],
  "properties": {
    "title": {
      "type": "string",
      "description": "Document title"
    },
    "author": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "array",
          "items": { "type": "string" }
        }
      ],
      "description": "Author name or list of authors"
    },
    "date": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
      "description": "ISO date (YYYY-MM-DD)"
    },
    "papersize": {
      "type": "string",
      "enum": [
        "letterpaper",
        "legalpaper",
        "ledgerpaper",
        "a0paper",
        "a1paper",
        "a2paper",
        "a3paper",
        "a6paper",
        "a4paper",
        "a5paper",
        "tabloidpaper"
      ],
      "description": "Page size for LaTeX"
    },
    "geometry": {
      "type": "string",
      "pattern": "^(portrait|landscape)?,?margin=[0-9]+(\\.[0-9]+)?(in|cm)$",
      "description": "Geometry package options, e.g. `portrait,margin=0.25in`"
    },
    "fontsize": {
      "type": "string",
      "pattern": "^[0-9]+pt$",
      "description": "Base font size (e.g. `10pt`, `11pt`, `12pt`)"
    },
    "header-includes": {
      "type": "string",
      "description": "Raw LaTeX to inject into the document preamble"
    }
  }
}

{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "importHelpers": false,
    "incremental": true,
    "module": "node18",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "sourceMap": true,
    "target": "esnext",
    "useDefineForClassFields": true
  }
}

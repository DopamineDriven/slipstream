{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    }
  },
  "ui": "tui",
  "globalEnv": [
    "AUTH_URL",
    "AUTH_SECRET",
    "COREPACK_ENABLE_STRICT",
    "NODE_ENV",
    "JWT_SECRET",
    "OPEN_AI_KEY",
    "REDIS_URL",
    "DATABASE_URL",
    "PORT",
    "VERCEL_ENV",
    "R2_ENDPOINT_URL",
    "R2_ACCESS_KEY",
    "R2_SECRET_KEY",
    "R2_BUCKET",
    "R2_NON_EU_URL",
    "R2_EU_URL",
    "R2_ACCOUNT_ID",
    "R2_ACCOUNT_TOKEN",
    "R2_ACCESS_KEY_ID",
    "R2_SECRET_ACCESS_KEY",
    "GITHUB_PAT",
    "FASTAPI_URL"
  ]
}

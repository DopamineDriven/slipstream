{
  "name": "@t3-chat-clone/database",
  "version": "1.0.0",
  "description": "convenient database util",
  "publishConfig": {
    "access": "public",
    "typesVersions": {
      "*": {
        "*": [
          "dist/*.d.ts",
          "dist/*/index.d.ts"
        ],
        "generated-client": ["dist/generated/client/client.d.ts"]
      }
    }
  },
  "license": "MIT",
  "source": "src/index.ts",
  "typesVersions": {
      "*": {
        "*": [
          "dist/*.d.ts",
          "dist/*/index.d.ts"
        ],
        "generated-client": ["dist/generated/client/client.d.ts"]
      }
  },
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/**/*.{js,cjs,d.ts,d.cts,css}"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*.js",
    "./generated-client": "./dist/generated/client/client.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "pnpm build",
    "lint": "eslint",
    "clean": "git clean -xdf .turbo dist node_modules",
    "fix": "npm pkg fix",
    "prebuild":"pnpm db:generate",
    "db:generate": "prisma generate --no-engine",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio --browser none --port 7777"
  },
  "dependencies": {
    "@prisma/client": "^6.10.1",
    "@prisma/extension-accelerate": "^2.0.1",
    "dotenv": "^17.0.0",
    "dotenv-cli": "^8.0.0",
    "dotenv-expand": "^12.0.2"
  },
  "devDependencies": {
    "@t3-chat-clone/eslint-config": "workspace:*",
    "@t3-chat-clone/prettier-config": "workspace:*",
    "@t3-chat-clone/tsconfig": "workspace:*",
    "@types/node": "^24.0.8",
    "chokidar": "^4.0.3",
    "eslint": "^9.30.0",
    "jiti": "^2.4.2",
    "prettier": "^3.6.2",
    "prisma": "^6.10.1",
    "tslib": "^2.8.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1"
  },
  "prettier": "@t3-chat-clone/prettier-config"
}

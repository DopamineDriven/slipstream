{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@slipstream/tsconfig/react-library.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "dist"
  },

  "include": ["src/**/*.ts", "src/**/*.tsx", "next-env.d.ts"],
  "exclude": ["dist"]
}
